#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    combos {
        compatible = "zmk,combos";

        kana {
            bindings = <&kp LANGUAGE_5>;
            key-positions = <8 9>;
        };

        tolayer2 {
            bindings = <&to 2>;
            key-positions = <28 33>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        layer_0 {
            bindings = <
              &kp L  &kp U          &kp F                                     &kp W               &kp R      &kp Y
       &kp E  &kp I  &kp A          &kp O            &kp MINUS         &kp K  &kp T               &kp N      &kp S  &kp H
