        layer_1 {
            bindings = <
              &none  &none  &none                    &kp N7        &kp N8        &kp N9
       &none  &none  &none  &none  &kp MINUS  &none  &kp NUMBER_4  &kp N5        &kp NUMBER_6  &kp RIGHT_PARENTHESIS
